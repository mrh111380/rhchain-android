<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_background"
    android:padding="20dp"
    android:gravity="center">

    <TextView
        android:id="@+id/item_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ÃŠtes-vous satisfait(e) de votre mission actuelle ?"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/item_unsatisfied"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_unsatisfied"
            android:layout_weight="1"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:background="?attr/selectableItemBackground"/>

        <ImageView
            android:id="@+id/item_neutral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_neutral"
            android:layout_weight="1"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:background="?attr/selectableItemBackground"/>

        <ImageView
            android:id="@+id/item_satisfied"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_satisfied"
            android:layout_weight="1"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:background="?attr/selectableItemBackground"/>


    </LinearLayout>

</LinearLayout>