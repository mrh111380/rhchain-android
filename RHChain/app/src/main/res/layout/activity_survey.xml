<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nantes_sqli.rhchain.SurveyActivity"
    android:background="#ffffff">



       <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:text="Êtes-vous satisfait(e) de l'ambiance de travail au sein de l'agence ?"
            android:textAlignment="center"
            android:id="@+id/textView3" />

   <LinearLayout
            android:layout_marginTop="120dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
       android:id="@+id/linearLayout">

       <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:text="Êtes-vous satisfait(e) des informations qui vous sont transmises concernant la situation et les perspectives de l'agence et du groupe ?"
            android:textAlignment="center" />

   </LinearLayout>

    <LinearLayout
            android:layout_marginTop="240dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:id="@+id/linearLayout2">

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




    </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout3">

             <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"/>

        </LinearLayout>


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:layout_marginStart="32dp"
        android:src="@drawable/ic_sentiment_dissatisfied_black_24dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:backgroundTint="#f71414" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/ic_sentiment_neutral_black_24dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/imageButton2"
        android:clickable="true"
        android:backgroundTint="#f4e916" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:src="@drawable/ic_sentiment_satisfied_black_48dp"
        android:layout_below="@+id/textView3"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginStart="26dp"
        android:clickable="true"
        android:backgroundTint="#2af614" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton3"
        android:src="@drawable/ic_sentiment_dissatisfied_black_24dp"
        android:clickable="true"
        android:backgroundTint="#f71414"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/imageButton2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton4"
        android:src="@drawable/ic_sentiment_neutral_black_24dp"
        android:clickable="true"
        android:backgroundTint="#f4e916"
        android:layout_alignTop="@+id/imageButton3"
        android:layout_toStartOf="@+id/imageButton" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Êtes-vous satisfait(e) de votre mission actuelle ?"
        android:textAlignment="center"
        android:layout_below="@+id/imageButton4"
        android:layout_alignParentStart="true"
        android:id="@+id/textView4" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton5"
        android:src="@drawable/ic_sentiment_satisfied_black_48dp"
        android:clickable="true"
        android:backgroundTint="#2af614"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/imageButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton6"
        android:src="@drawable/ic_sentiment_dissatisfied_black_24dp"
        android:clickable="true"
        android:backgroundTint="#f71414"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/imageButton3"
        android:layout_marginTop="28dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton7"
        android:src="@drawable/ic_sentiment_neutral_black_24dp"
        android:clickable="true"
        android:backgroundTint="#f4e916"
        android:layout_alignTop="@+id/imageButton6"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton8"
        android:src="@drawable/ic_sentiment_satisfied_black_48dp"
        android:clickable="true"
        android:backgroundTint="#2af614"
        android:layout_alignTop="@+id/imageButton7"
        android:layout_alignStart="@+id/imageButton5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Soumettre"
        android:id="@+id/btn_soum"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
